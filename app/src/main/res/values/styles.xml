<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#B0B0B0</item>
        <item name="colorPrimary">#1D1E20</item>
        <item name="colorPrimaryDark">@color/color_toolbar</item>
        <item name="colorAccent">#B0B0B0</item>
    </style>

    <!-- NumberPicker theme -->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">#dc8f41</item>
    </style>

    <!-- Transparent background theme -->
    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/color_transparent_black</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!-- EditText theme -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#dc8f41</item>
        <item name="colorControlNormal">@color/color6</item>
    </style>
</resources>
